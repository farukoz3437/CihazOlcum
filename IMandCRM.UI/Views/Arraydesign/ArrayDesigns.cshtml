    <!--end::Page Custom Javascript-->

    <script>

        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": false,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut",
        };

    var msg;
    if ('@TempData["message"]' != undefined && '@TempData["message"]' != "") {
        msg = '@Html.Raw((string)TempData["message"])';
        if (msg != null) {
            msgArr = msg.split('|');
            if (msgArr[1] == "success") {
                toastr.success(msgArr[0]);
            } else if (msgArr[1] == "error") {
                toastr.error(msgArr[0]);
            } else if (msgArr[1] == "warning") {
                toastr.warning(msgArr[0]);
            } else if (msgArr[1] == "info") {
                toastr.info(msgArr[0]);
            }

        }
        }
        function Delete(idKod, userId) {
            debugger;
            console.log(idKod)
            Swal.fire({
                title: "Silmek istediğinizden emin misiniz?",
                icon: "warning",
                showCancelButton: true,
                cancelButtonText: "Hayır!",
                confirmButtonText: "Evet!"
            }).then(function (result) {
                if (result.value) {
                    $.ajax({
                        url: '/Arraydesign/ArrayDesignDelete?idKod=' + idKod + '&userId=' + userId,
                        type: 'GET',
                        success: function (response) {
                            if (response.responseStatus) {
                                toastr.success(response.messageText);
                                setTimeout(function () {
                                    location.reload(true);
                                }, 1000);
                            } else {
                                if (response.messageType == "warning") {
                                    toastr.warning(response.messageText);
                                }
                                if (response.messageType == "error") {
                                    toastr.error(response.messageText);
                                }
                                setTimeout(function () {
                                    location.reload(true);
                                }, 1000);
                            }
                        },
                        error: function (error) {
                            toastr.error("Hata oluştu.");
                        }
                    });
                }
            });

        }


    </script>
    }